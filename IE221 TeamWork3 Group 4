"""
IE221 – Probability and Statistics
Team Work 3

Strong Law of Large Numbers (SLLN) Simulation

This script experimentally verifies the Strong Law of Large Numbers.
Independent and identically distributed random variables are generated
from a Uniform(0,1) distribution. The cumulative sample mean is computed
and shown to converge almost surely to the expected value μ = 0.5.
"""

import numpy as np
import matplotlib.pyplot as plt
import os


def run_slln():
    """Runs the Strong Law of Large Numbers simulation."""
    os.makedirs("results/figures", exist_ok=True)

    n = 10000
    mu = 0.5

    observations = np.random.uniform(0, 1, n)
    cumulative_mean = np.cumsum(observations) / np.arange(1, n + 1)

    plt.figure(figsize=(10, 6))
    plt.plot(cumulative_mean, label=r'Sample Mean $\bar{X}_n$')
    plt.axhline(mu, linestyle='--', label=r'Expected Value $\mu = 0.5$')
    plt.xlabel('Number of Observations (n)')
    plt.ylabel('Cumulative Mean')
    plt.title('Strong Law of Large Numbers (Almost Sure Convergence)')
    plt.legend()
    plt.grid(alpha=0.3)

    plt.savefig('results/figures/slln_convergence.png')
    plt.show()


if __name__ == "__main__":
    run_slln()

│   ├── clt_simulation.py
"""
IE221 – Probability and Statistics
Team Work 3

Central Limit Theorem (CLT) Simulation

This script illustrates the Central Limit Theorem using sums of i.i.d.
Uniform(0,1) random variables. For increasing sample sizes, the
standardized sums are shown to converge in distribution to N(0,1)
using histograms and Normal Q-Q plots.
"""

import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import norm, probplot
import os


def run_clt():
    """Runs the Central Limit Theorem simulation."""
    os.makedirs("results/figures", exist_ok=True)

    m = 1000
    n_values = [2, 5, 10, 30, 50]
    mu = 0.5
    sigma = np.sqrt(1 / 12)

    fig, axes = plt.subplots(len(n_values), 1, figsize=(8, 20))
    qq_fig, qq_axes = plt.subplots(len(n_values), 1, figsize=(8, 20))

    for i, n in enumerate(n_values):
        samples = np.random.uniform(0, 1, (m, n))
        sums = np.sum(samples, axis=1)

        standardized = (sums - n * mu) / (sigma * np.sqrt(n))

        axes[i].hist(standardized, bins=30, density=True, alpha=0.6)
        x = np.linspace(-4, 4, 200)
        axes[i].plot(x, norm.pdf(x), linewidth=2)
        axes[i].set_title(f'CLT Histogram (n = {n})')

        probplot(standardized, dist="norm", plot=qq_axes[i])
        qq_axes[i].set_title(f'Normal Q-Q Plot (n = {n})')

    fig.tight_layout()
    fig.savefig('results/figures/clt_histograms.png')

    qq_fig.tight_layout()
    qq_fig.savefig('results/figures/clt_qqplots.png')

    plt.show()


if __name__ == "__main__":
    run_clt()

│   ├── monte_carlo_pi.py
i"""
IE221 – Probability and Statistics
Team Work 3

Monte Carlo Estimation of Pi

This script estimates the value of π using the Monte Carlo method.
Random points are generated inside the unit square [0,1]×[0,1].
The proportion of points falling inside the unit quarter-circle
converges to π/4 by the Strong Law of Large Numbers.
"""

import numpy as np
import matplotlib.pyplot as plt
import os


def run_monte_carlo():
    """Runs Monte Carlo simulation to estimate π."""
    os.makedirs("results/figures", exist_ok=True)

    n = 10000

    x = np.random.uniform(0, 1, n)
    y = np.random.uniform(0, 1, n)

    inside = (x**2 + y**2) <= 1
    pi_estimate = 4 * np.cumsum(inside) / np.arange(1, n + 1)

    plt.figure(figsize=(10, 6))
    plt.plot(pi_estimate, label=r'Estimated $\pi$')
    plt.axhline(np.pi, linestyle='--', label=r'True $\pi$')
    plt.xlabel('Number of Points (n)')
    plt.ylabel(r'$\pi$ Estimate')
    plt.title('Monte Carlo Estimation of $\pi$')
    plt.legend()
    plt.grid(alpha=0.3)

    plt.savefig('results/figures/pi_estimation.png')
    plt.show()


if __name__ == "__main__":
    run_monte_carlo()


